<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Generos"
    android:background="@color/md_theme_light_secondaryContainer">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/plataformas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/athiti_semibold"
                android:text="Plataformas: "
                android:textColor="#595252"
                android:textSize="23dp"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/ps4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PS4" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PC" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/xbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XBOX" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/wii"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WII" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/wiiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIIU" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3DS" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/x360"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X360" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/athiti_semibold"
                android:text="GÃ©nero: "
                android:textColor="#595252"
                android:textSize="23dp"
                tools:layout_editor_absoluteY="60dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerGeneros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>

        </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="#F1400B"
        app:fabAnchorMode="cradle">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="#33C1EC"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_input_add"
            app:layout_anchor = "@id/bottomAppBar"/>


    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
